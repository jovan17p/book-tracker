                {% endfor %}
            </span>
        </span>
    </div>

    <hr>
    <h3>{{ 'Ostavi komentar:'|trans }}</h3>
    {{ form_start(form) }}
        {{ form_widget(form.content, {'attr': {'placeholder': 'NapiÅ¡i komentar...'|trans}}) }}
        <button type="submit" class="btn btn-primary">{{ 'PoÅ¡alji komentar'|trans }}</button>
    {{ form_end(form) }}

    <hr>
    <h3>{{ 'Komentari:'|trans }}</h3>
    {% if book.comments|length == 0 %}
        <p>{{ 'JoÅ¡ uvek nema komentara.'|trans }}</p>
    {% else %}
        <ul class="comment-list">
            {% for comment in book.comments %}
                <li class="comment-box">
                    <p class="comment-content">{{ comment.content }}</p>
                    <p class="comment-meta">
                        {{ 'Objavio'|trans }}:
                        <a href="{{ path('user_profile', {'id': comment.user.id}) }}">
                            {{ comment.user.username ?: comment.user.email }}
                        </a>
                        ({{ comment.createdAt|date('d.m.Y H:i') }})
                    </p>
                    <div>
                        <a href="{{ path('comment_like', {'id': comment.id}) }}" class="like-btn" title="{{ 'SviÄ‘a mi se ğŸ‘'|trans }}">ğŸ‘</a>
                        <span class="tooltip-wrapper">
                            {{ comment.likes|length }}
                            <span class="tooltip-text">
                                {% for u in comment.likes %}
                                    {{ u.username ?: u.email }}<br>
                                {% endfor %}
                            </span>
                        </span>

                        <a href="{{ path('comment_dislike', {'id': comment.id}) }}" class="dislike-btn" title="{{ 'Ne sviÄ‘a mi se ğŸ‘'|trans }}">ğŸ‘</a>
